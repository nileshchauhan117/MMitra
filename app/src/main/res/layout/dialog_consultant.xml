<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_textcolor"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Register New" />


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:padding="10dp"
            android:src="@drawable/back_white" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="top"
            >

    <android.support.design.widget.TextInputLayout
        android:theme="@style/TextLabel"
        android:layout_width="match_parent"
        android:id="@+id/layout_fname"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/txt_first"
            android:inputType="text"
            android:hint="First Name*" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:theme="@style/TextLabel"
        android:layout_width="match_parent"
        android:id="@+id/layout_lname"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/txt_last"
            android:inputType="text"
            android:hint="Last Name *" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_email"
        android:theme="@style/TextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/txt_email"
            android:inputType="textEmailAddress"
            android:hint="Email ID *" />

    </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_mobile"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:maxLength="10"
                    android:id="@+id/txt_mobile"
                    android:inputType="number"
                    android:hint="Mobile Number *" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_regno"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:maxLength="15"
                    android:id="@+id/txt_regno"
                    android:inputType="number"
                    android:hint="CoA Reg. Number*" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_number"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:maxLength="10"
                    android:id="@+id/txt_number"
                    android:inputType="number"
                    android:hint="Licence Number *" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:id="@+id/layout_validupto"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.15"
                    android:gravity="left|center"
                    android:layout_marginTop="5dp"
                    android:hint="Expiry Date"
                    android:inputType="text"
                    android:visibility="gone"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/maroon"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_weight="0.15"
                        android:gravity="left|center"
                        android:hint="Licence Valid Upto (dd/mm/yyyy)*"
                        android:inputType="text"
                        android:lines="1"
                        android:textColorHint="@color/app_orange"
                        android:singleLine="false"
                        android:textColor="@color/app_textcolor"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"

                        android:padding="10dp"
                        android:src="@drawable/dropdown_icon"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.9dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/app_textcolor" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_Membership"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:maxLength="6"
                    android:id="@+id/txt_Membership"
                    android:inputType="number"
                    android:hint="Membership Number *" />

            </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_radio"
            android:layout_gravity="top"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:maxLength="10"
                android:textColor="@color/app_textcolor"
                android:inputType="text"
                android:text="Type *" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Proprietorship" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partnership" />



            </RadioGroup>
        </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_Firm"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:maxLength="10"
                    android:id="@+id/txt_Firm"
                    android:inputType="text"
                    android:hint="Firm Name *" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_Firmno"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:maxLength="6"
                    android:id="@+id/txt_Firmno"
                    android:inputType="number"
                    android:hint="Firm Reg.Number*" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_panno"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:maxLength="6"
                    android:id="@+id/txt_panno"
                    android:inputType="number"
                    android:hint="PAN Number*" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/img_uplode_name"
                android:visibility="visible"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="9dp"
                android:textColor="@color/red"
                android:text="*PLEASE Click on image to select file" />

            <ImageView
                android:id="@+id/image_Upload"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="left"
                android:padding="3dp"
                android:src="@drawable/noi"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="1">



                <Button
                    android:id="@+id/btnlogin"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:background="@drawable/round_orange"
                    android:text="Submit" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar_main"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/curve_progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/progress"
        android:layout_width="70dp"
        android:padding="10dp"
        android:layout_height="70dp" />
</RelativeLayout>
</LinearLayout>
