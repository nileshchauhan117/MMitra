<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >


        <TextView
            android:id="@+id/tv_b_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Block Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_b_unit_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Residential Units "
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="normal" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/gray_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Residential Units : "
            android:textStyle="normal"
            android:padding="5dp"
            android:id="@+id/tv_b_unit"
            android:textColor="@color/gray"
            android:textSize="12dp"
            />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="10dp"
            android:background="@color/gray_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_b_shop_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Shops"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="normal" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/gray_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shops"
            android:textStyle="normal"
            android:padding="5dp"
            android:id="@+id/tv_b_shop"
            android:textColor="@color/gray"
            android:textSize="12dp"
            />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="10dp"
            android:background="@color/gray_light" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_b_offices_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Offices"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="normal" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/gray_light" />
            <TextView
                android:id="@+id/tv_b_offices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Offices"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="normal" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="10dp"
            android:background="@color/gray_light" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_b_ploat_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Plots"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="normal" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/gray_light" />
            <TextView
                android:id="@+id/tv_b_ploat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Plots"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="normal" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="10dp"
            android:background="@color/gray_light" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_b_other_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Other"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="normal" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/gray_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textStyle="normal"
            android:padding="5dp"
            android:id="@+id/tv_b_other"
            android:textColor="@color/gray"
            android:textSize="12dp"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="10dp"
            android:background="@color/gray_light" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_b_totalu_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Total Units"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="normal" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/gray_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Units"
            android:textStyle="normal"
            android:padding="5dp"
            android:id="@+id/tv_b_totalu"
            android:textColor="@color/gray"
            android:textSize="12dp"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="10dp"
            android:background="@color/gray_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/img_name"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="10dp"
                android:text="Rajachitthi Document" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:background="@drawable/noi"
                 />

            <Button
                android:id="@+id/btn_download"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_download_bg"
                android:text="DOWNLOAD"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/img_name1"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="10dp"
                android:text="Block Plan (Design)" />

            <ImageView
                android:id="@+id/image_view1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:background="@drawable/noi"
              />



            <Button
                android:id="@+id/btn_download1"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_download_bg"
                android:text="DOWNLOAD"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textSize="10dp"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rel_view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:background="#BB000000"
        >

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/img_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/btn_close"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="X Close"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</LinearLayout>
