<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/wack_bottombarMain"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_regi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Register"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textColor="@color/maroon"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/txt_fpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Forgot Password"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/maroon"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/txt_pp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Privacy Policy"
            android:padding="5dp"
            android:textColor="@color/maroon"
            android:textSize="15sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#606060" />

    <LinearLayout
        android:id="@+id/wack_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:padding="1dp"
                android:layout_gravity="center"
                android:src="@drawable/service_i" />

            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:text="Services"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/maroon"
                android:textSize="10dp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:orientation="vertical" >
			<ImageView 
    			android:id="@+id/img_2"
                android:layout_width="30sp"
                android:padding="3dp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:src="@drawable/about_i"
   			 />

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="About Us"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/maroon"
                android:textSize="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:orientation="vertical" >
			<ImageView 
			    android:id="@+id/img_3"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/contact_i"
   			 />

            <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:text="Contact Us"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/maroon"
                android:textSize="12dp"/>
        </LinearLayout>


            </LinearLayout>

</LinearLayout>