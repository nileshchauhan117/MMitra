<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/maroon"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Forgot Password" />


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:padding="10dp"
            android:src="@drawable/back_white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center|center"
        android:background="@color/white"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center|top"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="top"
                android:layout_marginBottom="20dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:paddingLeft="25dp"
                            android:visibility="gone"
                            android:paddingRight="25dp"
                            android:src="@drawable/logo" />

                        <TextView
                            android:text=""
                            android:textSize="20dp"
                            android:id="@+id/txt_version"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="45dp"
                            android:gravity="left|top">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center|center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="Login as"
                                    android:layout_gravity="left"
                                    android:textColor="@color/gray"
                                    android:textSize="15dp" />

                                <RadioGroup
                                    android:id="@+id/radioGroup1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="left"
                                    android:layout_centerInParent="true" >



                                    <RadioButton
                                        android:id="@+id/radio1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="Consultant/Promoter" />

                                    <RadioButton
                                        android:id="@+id/radio2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Allottee" />


                                </RadioGroup>
                            </LinearLayout>

                            <android.support.design.widget.TextInputLayout
                                android:theme="@style/TextLabel"
                                android:layout_width="match_parent"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="0.15"
                                    android:id="@+id/txt_mnos"
                                    android:hint="Enter Mobile Number"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:maxLength="10"
                                    android:textColor="#aaaaaa"
                                    android:textColorHint="#aaaaaa"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:textSize="13dp" />

                            </android.support.design.widget.TextInputLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:id="@id/layout2"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:gravity="left|center">
                            <android.support.design.widget.TextInputLayout
                                android:theme="@style/TextLabel"
                                android:layout_width="match_parent"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="0.15"
                                    android:id="@+id/txt_pass"
                                    android:hint="Enter New Password"
                                    android:inputType="textPassword"
                                    android:lines="1"
                                    android:textColor="#aaaaaa"
                                    android:textColorHint="#aaaaaa"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:textSize="13dp" />

                            </android.support.design.widget.TextInputLayout>


                            <android.support.design.widget.TextInputLayout
                                android:theme="@style/TextLabel"
                                android:layout_width="match_parent"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="0.15"
                                    android:id="@+id/txt_cpass"
                                    android:hint="Enter Confirm Password"
                                    android:inputType="textPassword"
                                    android:lines="1"
                                    android:textColor="#aaaaaa"
                                    android:textColorHint="#aaaaaa"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:textSize="13dp" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:theme="@style/TextLabel"
                                android:layout_width="match_parent"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:id="@+id/layout_otp"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="0.15"
                                    android:id="@+id/txt_otp"
                                    android:hint="Enter OTP"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:maxLength="6"
                                    android:textColor="#aaaaaa"
                                    android:textColorHint="#aaaaaa"
                                    android:padding="8dp"
                                    android:singleLine="true"
                                    android:textSize="13dp" />

                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:id="@+id/txt_messotp"
                                android:textColor="@color/red"
                                android:textSize="18dp"
                                android:gravity="left"
                                android:layout_marginTop="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:text="60 min" />

                            <TextView
                                android:id="@+id/txt_messotp1"
                                android:textColor="@color/green"
                                android:textSize="15dp"
                                android:gravity="left"
                                android:layout_marginTop="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:text="valid 15 min" />

                            <Button
                                android:id="@+id/btn_otp"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:paddingRight="8dp"
                                android:paddingLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:textAllCaps="false"
                                android:background="@drawable/round_green"
                                android:text="Get OTP" />
                            <CheckBox
                                android:id="@+id/radio_turms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:visibility="gone"
                                android:text="I agree to terms and conditions" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top|center"
                                android:orientation="vertical"
                                android:paddingTop="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:weightSum="1">

                                <Button
                                    android:id="@+id/btnlogin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left"
                                    android:background="@drawable/round_orange"
                                    android:text="Save"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="15dp" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/progressBar_main"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/curve_progress"
                        android:gravity="center"
                        android:visibility="gone"
                        android:indeterminateDrawable="@drawable/progress"
                        android:padding="10dp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/bottombar"/>
    </LinearLayout>
</RelativeLayout>
