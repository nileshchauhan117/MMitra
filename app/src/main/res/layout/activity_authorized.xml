<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/layout_top"
            android:background="@color/app_textcolor"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Current Project"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:padding="10dp"
                android:src="@drawable/back_white" />

        </RelativeLayout>



        <!--<android.support.v4.widget.SwipeRefreshLayout-->
        <!--android:id="@+id/swipe_refresh_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"

            android:layout_marginTop="50dp"
            android:orientation="vertical"
            shimmer:duration="800"
            >

            <!-- Adding 3 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/recipe_placeholder_item" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#606060" />
                <include layout="@layout/recipe_placeholder_item" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#606060" />
                <include layout="@layout/recipe_placeholder_item" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#606060" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#606060" />
                <include layout="@layout/recipe_placeholder_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#606060" />
                <include layout="@layout/recipe_placeholder_item" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#606060" />
                <include layout="@layout/recipe_placeholder_item" />
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/simpleSwipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="match_parent">


            <ListView
                android:id="@+id/listView_orderd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/ll_top_view"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:scrollbars="none"
                android:padding="0dp"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="0.0dp" />

        </android.support.v4.widget.SwipeRefreshLayout>
        <!--</android.support.v4.widget.SwipeRefreshLayout>-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:id="@+id/norecord"
            >

            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="@color/gray_1"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="10dp"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textAlignment="center"
                android:id="@+id/text_login" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/tv_loading"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="More drivers loading..."
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:background="#20000000"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/i_user"
        android:tint="@color/white"
        app:backgroundTint="@color/maroon"
        app:elevation="5dp"
        app:pressedTranslationZ="10dp" />

    <ImageView
        android:id="@+id/img_norecord"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:padding="80dp"
        android:src="@drawable/norecord" />

</RelativeLayout>
