<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_textcolor">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:padding="10dp"
            android:src="@drawable/back_white" />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_form2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:visibility="gone"
            android:textSize="12dp"
            android:text="Bank and Lenders"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Construction Cost"
            android:id="@+id/title1"
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="#FA7400"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_username"
            android:layout_toRightOf="@+id/tv_username"
            android:text=" V1.4" />

        <TextView
            android:id="@+id/tv_form3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:visibility="gone"
            android:textSize="12dp"
            android:text="Certificate"
            android:textColor="@color/white"

            />
        <ImageView
            android:id="@+id/img_pdf"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Logout"
            android:visibility="gone"
            android:tint="@color/white"
            android:src="@drawable/pdf_link"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="10dp"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/t_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/maroon_tra"
                android:text="Blocks and Inventory"
                android:textAllCaps="false"
                android:textColor="@color/tvcolor"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Construction Schedule"
                android:background="@color/maroon_tra"
                android:textAllCaps="false"
                android:textColor="@color/tvcolor"
                android:textSize="10sp" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Construction Cost"
                android:background="@color/white"
                android:textAllCaps="false"
                android:textColor="@color/tvcolor"
                android:textSize="10sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Land Cost"
                android:padding="5dp"
                android:background="@color/maroon_tra"
                android:textAllCaps="false"
                android:textColor="@color/tvcolor"
                android:textSize="10sp" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Other Cost"
                android:padding="5dp"
                android:background="@color/maroon_tra"
                android:textAllCaps="false"
                android:textColor="@color/tvcolor"
                android:textSize="10sp" />




        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/maroon"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="vertical"
        android:id="@+id/layout_pro"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:text="Total Estimated Cost of Block"
            android:textColor="@color/app_textcolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:id="@+id/txt_blockcost"
            android:text="₹00.00"
            android:textColor="@color/original_black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:id="@+id/layout_blockid"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Block"
            android:textColor="@color/grey" />
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/spi_block"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="0.15"
                android:background="@drawable/curve_border_bg"
                android:gravity="left|top"
                android:hint="Select Promoter Group"
                android:inputType="textMultiLine"
                android:lines="1"
                android:padding="5dp"
                android:textColorHint="@color/grey"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:src="@drawable/dropdown_icon"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Select Quarter"
            android:textColor="@color/grey" />
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/spi_quater_block"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="0.15"
                android:background="@drawable/curve_border_bg"
                android:gravity="left|top"
                android:hint="Select Promoter Group"
                android:inputType="textMultiLine"
                android:lines="1"
                android:padding="5dp"
                android:textColorHint="@color/grey"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:src="@drawable/dropdown_icon"
                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_search"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:background="@drawable/round_orange"
            android:text="Search" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:text="Total Estimated Cost of Common Amenities"
            android:textColor="@color/app_textcolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:text="₹00.00"
            android:id="@+id/txt_amenities"
            android:textColor="@color/original_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Select Quarter"
            android:textColor="@color/grey" />
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/spi_quater_amenities"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="0.15"
                android:background="@drawable/curve_border_bg"
                android:gravity="left|top"
                android:hint="Select Promoter Group"
                android:inputType="textMultiLine"
                android:lines="1"
                android:padding="5dp"
                android:textColorHint="@color/grey"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:src="@drawable/dropdown_icon"
                />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/maroon"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:fadingEdge="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:id="@+id/layout_date"
                    android:background="@drawable/curve_border_bg_new"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_margin="1px"
                            android:gravity="left|center"
                            android:text="Books of Accounts Verified Till : "
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/maroon"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:padding="2dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/curve_border_bgcolor1"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/t1_disd"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="right|center"
                                android:layout_alignParentRight="true"
                                android:text="DD-MM-YYYY"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/maroon"
                                />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/arr"
                                android:padding="1dp"
                                android:layout_alignParentRight="true"
                                android:gravity="center_horizontal|center"
                                android:layout_centerVertical="true"
                                android:tint="@color/maroon"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray_light" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:padding="2dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_margin="1px"
                            android:gravity="left|center"
                            android:text="Certificate Date :"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/maroon"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:padding="2dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/curve_border_bgcolor1"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/t2_disd"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="right|center"
                                android:layout_alignParentRight="true"
                                android:text="DD-MM-YYYY"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/maroon"
                                />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/arr"
                                android:padding="1dp"
                                android:layout_alignParentRight="true"
                                android:gravity="center_horizontal|center"
                                android:layout_centerVertical="true"
                                android:tint="@color/maroon"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray_light" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/layout_f1_title"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:background="@color/maroon_tra"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:visibility="invisible"
                            android:tint="@color/maroon"
                            android:src="@drawable/down_a" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:id="@+id/title_f1"
                                android:textStyle="bold"
                                android:layout_alignParentLeft="true"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:text="Booked Inventory"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/title_f1_v"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:text="View  "
                                android:textColor="@color/actionbarcolor"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:background="@color/gray" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray_light" />
                </LinearLayout>




            </LinearLayout>

        </ScrollView>
        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/curve_progress"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/progress"
            android:layout_width="70dp"
            android:padding="10dp"
            android:layout_height="70dp" />
    </RelativeLayout>

</LinearLayout>