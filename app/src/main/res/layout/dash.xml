<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/maroon_tra"
    android:layout_height="match_parent">




     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/maroon"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Authorized Signatory"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:padding="10dp"
                android:src="@drawable/back_white" />

        </RelativeLayout>

    <LinearLayout
android:layout_width="match_parent"
android:orientation="horizontal"
android:gravity="center"
android:paddingRight="10dp"
android:paddingLeft="10dp"
android:layout_marginTop="35dp"
android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/layout_basic"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/curve_border_bg_new"
        android:paddingTop="45dp"
        android:paddingBottom="45dp"
        >


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                android:text="Project Details"
                android:id="@+id/textView1"
                android:textColor="@color/maroon"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:id="@+id/textView"
                android:text="dsfsfsf"
                android:visibility="gone"
                android:gravity="center"
                android:textSize="9dp"
                android:textColor="@color/grey"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/layout_qprlist"
            android:background="@drawable/curve_border_bg_new"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="45dp"
            android:paddingBottom="45dp"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:text="Registration Forms"
                    android:textColor="@color/maroon"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dsfsfsf"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textSize="9dp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"/>



            </RelativeLayout>
        </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"

        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:id="@+id/layout_inventory"
            android:background="@drawable/curve_border_bg_new"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="45dp"
            android:paddingBottom="45dp"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Inventery"
                    android:textColor="@color/maroon"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dsfsfsf"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textSize="9dp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"/>



            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/layout_qpr"
            android:background="@drawable/curve_border_bg_new"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="45dp"
            android:paddingBottom="45dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="QPR"
                    android:textColor="@color/maroon"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dsfsfsf"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textSize="9dp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"/>



            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
