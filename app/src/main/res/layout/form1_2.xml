        android:layout_height="match_parent"
        android:text="0"
        android:id="@+id/txt_3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:inputType="number"
        android:textColor="@color/gray"
        android:textSize="12dp"
        android:textStyle="normal" />

</LinearLayout>
