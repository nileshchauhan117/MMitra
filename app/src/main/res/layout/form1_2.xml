    android:layout_height="40dp">

    <View
        android:layout_width="0.1dp"
        android:layout_height="fill_parent"
        android:background="#606060" />


    <TextView

        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:text="0"
        android:id="@+id/txt_2"
        android:layout_marginLeft="5dp"
