        android:inputType="number"
        android:textColor="@color/gray"
        android:textSize="12dp"
        android:textStyle="normal" />

    <View
        android:layout_width="0.1dp"
        android:layout_height="fill_parent"
        android:background="#606060" />
    <TextView

