<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_textcolor">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:padding="10dp"
            android:src="@drawable/back_white" />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_form2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:visibility="gone"
            android:textSize="12dp"
            android:text="Bank and Lenders"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Project Report"
            android:id="@+id/title1"
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="#FA7400"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_username"
            android:layout_toRightOf="@+id/tv_username"
            android:text=" V1.4" />

        <TextView
            android:id="@+id/tv_form3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:visibility="gone"
            android:textSize="12dp"
            android:text="Certificate"
            android:textColor="@color/white"

            />
        <ImageView
            android:id="@+id/img_pdf"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Logout"
            android:visibility="gone"
            android:tint="@color/white"
            android:src="@drawable/pdf_link"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="10dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:fadingEdge="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/container_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/curve_progress"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/progress"
            android:layout_width="70dp"
            android:padding="10dp"
            android:layout_height="70dp" />
    </RelativeLayout>

</LinearLayout>