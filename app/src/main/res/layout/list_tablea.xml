<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="1"
                android:textAllCaps="false"
                android:textColor="@color/tvcolor"
                android:textSize="19sp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@color/gray_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_dec"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="15dp"
                android:src="@drawable/less"
                android:text="Button" />

            <EditText
                android:id="@+id/tv_header"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:singleLine="true"
                android:padding="5dp"
                android:ellipsize="end"
                android:layout_margin="5dp"
                android:background="@drawable/curve_border_bg2"
                android:hint="Work"
                android:maxLength="100"
                android:inputType="number"
                android:textAllCaps="false"
                android:textColor="@color/tvcolor"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btn_inc"
                android:layout_width="40dp"
                android:padding="15dp"
                android:layout_height="40dp"
                android:src="@drawable/gre"
                android:text="Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="right"
            android:id="@+id/layout_Quantity"
            android:orientation="horizontal">
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/gray_light" />

            <EditText
                android:id="@+id/txt_Quantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:hint="Quantity"
                android:inputType="number"
                android:background="@drawable/curve_border_bg2"
                android:textAllCaps="false"
                android:textColor="@color/tvcolor"
                android:textSize="12sp" />




        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:id="@+id/layout_image"
        android:layout_margin="5dp">


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tkk"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Site Photographs" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/img_name"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Site Photographs" />

        <ImageView
            android:id="@+id/image_Upload"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:padding="3dp"
            android:src="@drawable/noi"
            />

        <Button
            android:id="@+id/btn_name"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_download_bg"
            android:text="Upload"
            android:textAllCaps="false"
            android:textSize="10dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:background="@color/gray_light" />
</LinearLayout>